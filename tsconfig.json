{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration":false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": ["es6", "dom"],
    "typeRoots": ["node_modules/@types"]
  },

  "exclude": [
    "node_modules",
    "dts",
    "testing",
    "lib"
  ]
}